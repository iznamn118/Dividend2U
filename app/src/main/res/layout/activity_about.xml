<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_purple"
    android:gravity="center"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_white"
        android:gravity="center"
        android:orientation="vertical"
        android:elevation="8dp"
        android:padding="32dp">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dividend2U"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#6200EE"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0"
            android:textColor="#757575"
            android:layout_marginBottom="32dp"/>

        <View
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEVELOPED BY"
            android:textSize="12sp"
            android:letterSpacing="0.1"
            android:textColor="#757575"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MUHAMMAD IZZAN AIMAN BIN ABDULLAH"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023216782"
            android:textColor="#757575"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ICT 602 _ CDCS2405A"
            android:textColor="#757575"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvGithub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View on GitHub"
            android:background="@drawable/bg_button_purple"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginTop="32dp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2025 All Rights Reserved"
            android:textSize="10sp"
            android:textColor="#BDBDBD"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</LinearLayout>